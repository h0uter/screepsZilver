@startuml
frame Game  {
 [creeps]
 [structures]
 [constructionSites]
}

frame agents {
  frame Creep {
    [Engineer]
    [Harvester]
    [Miner]
  }
  frame Structure {
    [Spawn]
    [Tower]
  }
  [Room]
}

dataBase Model {
  dataBase Memory {
    [roomInfo]
    [gameInfo]
  }
    () jobQueue
    () spawnQueue
    () buildQueue
}

package Director {


  [Strategy]
  () agentInput - [Strategy]
}

[main] -- loop
loop ---> Room : run()
loop ---> [logger] : run()
loop ---> Director: run()

Room --> Creep: run()
Room --> Structure : run()

[Strategy] --> Model  : update data
Model --> Director : notify change

' [logger] ..> Memory : read

agents --> agentInput

@enduml
